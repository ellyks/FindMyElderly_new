<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:background="#FFFFFF"
        tools:context="com.findmyelderly.findmyelderly.MainActivity">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="200dp"
            android:layout_height="220dp"
            app:srcCompat="@drawable/home"
            android:layout_above="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回家"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    <ImageButton
            android:id="@+id/help"
            android:layout_width="200dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/help"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="語音輸入"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_below="@+id/verbal"
            android:layout_toRightOf="@+id/help"
            android:layout_toEndOf="@+id/help"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp" />

        <ImageButton
            android:id="@+id/verbal"
            android:layout_width="180dp"
            android:layout_height="190dp"
            app:srcCompat="@drawable/verbal_input"
            android:layout_below="@+id/textView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="17dp"
            android:layout_marginEnd="17dp" />

    <Button
            android:text="登出"
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logout"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2"
        android:layout_marginTop="16dp"
        android:id="@+id/cc" />

    <TextView
        android:id="@+id/batteryLV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/cc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/cc"
        android:layout_below="@+id/cc"
        android:layout_marginTop="22dp"
        android:text="現在電力：" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="求救"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:layout_below="@+id/verbal"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

</RelativeLayout>

